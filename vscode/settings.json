{
    "workbench.colorTheme": "Default Light+",
    "editor.trimAutoWhitespace": false, //Stop auto removing of white space
    "editor.renderWhitespace": "all",    //View white space
    "files.eol": "\n",
    "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
    
    // Command to provide Rstudio like REPL
    // Requires installation of multicommnad plugin
    "multiCommand.commands": [
        {
            "command": "multiCommand.Line-run",
            "sequence": [
                "expandLineSelection",
                "workbench.action.terminal.runSelectedText",
                "cancelSelection"
            ]
        }
    ],
    
    "window.zoomLevel": 0,
    "explorer.confirmDragAndDrop": false,
    "editor.detectIndentation": false,
    "yaml.schemas": {
        "file:///toc.schema.json": "/toc\\.yml/i"
    },
    "[yaml]":  {
		"editor.insertSpaces": true,
		"editor.tabSize": 4,
		"editor.autoIndent": "brackets"
    },
    "terminal.external.osxExec": "Iterm.app",
    "r.bracketedPaste": true,
    "r.alwaysUseActiveTerminal": true,
    "files.associations": {
        "*.rmd": "markdown"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "workbench.iconTheme": "vscode-icons",
    "editor.autoClosingOvertype": "always",
    "vim.vimrc.enable": true,
    "todo-tree.highlights.defaultHighlight": {
        "background": "white"
    },
    "r.sessionWatcher": true
}
